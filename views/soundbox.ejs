<!DOCTYPE html>
<html>
<head>
    <title>Sound Box</title>
    <%- include('partials/html_head') %>
    <link rel="stylesheet" href="/css/soundbox.css">
</head>
<body>
    <div class="container">
        <div class="header">
            <button id="homeButton">Home</button>
            <button id="calibrationButton">Calibrate</button>
            <button id="soundPackButton">Free Sound Pack</button>
            <button id="recordButton">Record</button>
        </div>
        <div class="volume-container">
            <label for="master-volume" class="slider-label">Volume</label>
            <input id="master-volume" class="slider" type="range" min="0" max="1" step="0.01" value="0.7">
        </div>
        <div id="dropBox">
            Drag and Drop your audio files here or click to select files. Only 10 files are allowed at a time.
            <input type="file" id="fileInput" style="display: none;" accept="audio/*" multiple>
        </div>
        <div id="sound-box">
            <!-- Audio elements and number buttons will be added here dynamically -->
        </div>
        <div id="number-pad" class="hidden">
            <button class="num-button">1</button>
            <button class="num-button">2</button>
            <button class="num-button">3</button>
            <button class="num-button">4</button>
            <button class="num-button">5</button>
            <button class="num-button">6</button>
            <button class="num-button">7</button>
            <button class="num-button">8</button>
            <button class="num-button">9</button>
            <button class="num-button">0</button>
        </div>
        <!-- <button id="toggle-pad-btn" class="hidden">Toggle Number Pad</button> -->
    </div>
    <script src="/js/soundbox.js"></script>
</body>
</html>
