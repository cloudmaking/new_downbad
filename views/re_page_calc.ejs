<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reading Tracker</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f0f0f0;
            margin: 0;
        }
        .container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        input, button {
            margin-top: 10px;
            padding: 10px;
            width: 100%;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        button {
            background-color: #28a745;
            color: white;
            cursor: pointer;
        }
        button:hover {
            background-color: #218838;
        }
        p {
            font-size: 1.2em;
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>Reading Tracker</h1>
        <label for="currentPage">Enter your current page:</label>
        <input type="number" id="currentPage" placeholder="e.g. 260" min="1">
        
        <label for="totalPages">Enter total pages:</label>
        <input type="number" id="totalPages" value="600" min="1">
        
        <label for="endDate">Select end date:</label>
        <input type="date" id="endDate" value="2024-12-04">
        
        <button onclick="calculatePages()">Calculate</button>
        <p id="result"></p>
    </div>

    <script>
        function calculatePages() {
            const currentPage = parseInt(document.getElementById('currentPage').value);
            const totalPages = parseInt(document.getElementById('totalPages').value);
            const endDate = new Date(document.getElementById('endDate').value);
            const today = new Date();

            const daysLeft = Math.floor((endDate - today) / (1000 * 60 * 60 * 24));
            const pagesLeft = totalPages - currentPage;

            if (currentPage >= totalPages) {
                document.getElementById('result').textContent = 'You have already completed the book!';
            } else if (currentPage < 1 || isNaN(currentPage) || totalPages < 1 || isNaN(totalPages)) {
                document.getElementById('result').textContent = 'Please enter valid page numbers.';
            } else if (daysLeft <= 0) {
                document.getElementById('result').textContent = 'The end date must be in the future.';
            } else {
                const pagesPerDay = (pagesLeft / daysLeft).toFixed(2);
                document.getElementById('result').textContent = `You need to read about ${pagesPerDay} pages per day to finish by your selected date.`;
            }
        }
    </script>

</body>
</html>